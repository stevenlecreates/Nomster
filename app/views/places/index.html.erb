<%= will_paginate @places %>


<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <li data-target="#carousel-example-generic" data-slide-to="2"></li>
    <li data-target="#carousel-example-generic" data-slide-to="3"></li>
    <li data-target="#carousel-example-generic" data-slide-to="4"></li>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <%= image_tag 'slider1.jpg' %>
      <div class="carousel-caption">
        beautiful stunning dishes!
      </div>
    </div>
    <div class="item">
      <%= image_tag 'slider2.jpg' %>
      <div class="carousel-caption">
        Quality fish and chip bars!
      </div>
    </div>
    <div class="item">
      <%= image_tag 'slider3.jpg' %>
      <div class="carousel-caption">
        Top class dessert places in the country!
      </div>
    </div>
    <div class="item">
      <%= image_tag 'slider4.jpg' %>
      <div class="carousel-caption">
        Best clubs and bars around town!
      </div>
    </div>
    <div class="item">
      <%= image_tag 'slider5.jpg' %>
      <div class="carousel-caption">
        Looking for a fancy taste?
      </div>
    </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>


<% @places.each do |place| %>
	<div class="booyah-box col-xs-10 col-xs-offset-1">
		<h1><%= link_to place.name, place_path(place) %></h1>	
		<i><%= place.address %></i> <br /> <br />
		<p><%= place.description %></p> <br />

		<% if place.user.present? %>
			<small><%= place.user.email %></small>
		<% end %>

<% if place.comments.present? %>
  <div class="col-xs-12">
    <blockquote>
      <% if place.comments.last.humanized_rating.present? %>
        <b><%= place.comments.last.humanized_rating %></b> -
      <% end %>
      <%= place.last_comment.message %>
      <small><%= place.comments.last.user.email %></small>
    </blockquote>
  </div>
<% end %>

<% if place.photos.present? %>
<div class="col-xs-10 col-xs-offset-1 index-page-image">
<% if place.photos.last.picture.present? %>
<%= image_tag place.photos.last.picture, :class => 'img-responsive' %>
<% end %>
</div>  
<% end %>


	</div>
<% end %>
